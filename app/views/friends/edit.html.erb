<h1>Editing Friend</h1>

<%= render 'form', friend: @friend %>

<div class="mt-3">
<%= link_to 'Show', @friend, class:"btn btn-sm btn-dark me-3" %>
<%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-outline-danger me-3" %>
<%= link_to 'Back', friends_path, class:"btn btn-sm btn-dark" %>
</div>
